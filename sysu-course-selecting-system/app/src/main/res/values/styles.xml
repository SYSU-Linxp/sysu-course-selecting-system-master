<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:layout_margin">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:background">@drawable/btn_style</item>
    </style>

    <style name="evaluate_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="evaluate_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">4</item>
    </style>

    <style name="evaluate_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">45dp</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">1</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_weight">13</item>
    </style>

    <style name="SettingViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/colorBackGround</item>
    </style>

    <style name="meItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_large_top_margin</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="meViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginRight">@dimen/activity_small_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_small_margin</item>
        <item name="android:background">@color/backLine</item>
    </style>
</resources>
