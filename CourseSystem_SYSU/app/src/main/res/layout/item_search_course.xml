<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/colorCloud"
    android:layout_height="match_parent">
    <TextView
        android:padding="3dp"
        android:id="@+id/item_search_classname"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="111"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_weight="1.7"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="1dp"
        android:id="@+id/item_search_teacher"
        android:textSize="12sp"
        android:text="111"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="3dp"
        android:id="@+id/item_search_credit"
        android:textSize="12sp"
        android:text="111"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="3dp"
        android:id="@+id/item_search_ratio_or_score"
        android:textSize="12sp"
        android:text="111"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_weight="1.2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />



    <TextView
        android:padding="3dp"
        android:gravity="center"
        android:id="@+id/item_search_time_and_position_or_semester"
        android:textSize="12sp"
        android:text="111"
        android:textColor="@color/black"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content" />

</LinearLayout>