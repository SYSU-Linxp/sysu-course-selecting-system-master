        <RatingBar
            android:id="@+id/ratingBar5"
            android:progressTint="@color/colorPrimary"
            style="@style/evaluate_item">
        </RatingBar>
    </LinearLayout>

    <Button
        style="@style/button"
        android:text="确认评价"
        android:id="@+id/confirm_evaluate"/>


    <View
        android:background="@drawable/shape_line"
