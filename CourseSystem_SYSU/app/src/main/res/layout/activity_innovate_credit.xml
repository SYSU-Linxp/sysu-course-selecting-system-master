    <LinearLayout
        style="@style/evaluate_layout">

        <TextView
            style="@style/evaluate_text"
            android:text="签到频率"/>
        <RatingBar
            android:id="@+id/ratingBar1"
            style="@style/evaluate_item"
            android:progressTint="@color/colorPrimary">
